<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>basedatos</param-name>
        <param-value>jdbc:mysql://localhost:3306/jl</param-value>
    </context-param>
    <context-param>
        <param-name>usuario</param-name>
        <param-value>jl</param-value>
    </context-param>
    <context-param>
        <param-name>clave</param-name>
        <param-value>jl</param-value>
    </context-param>
    <servlet>
        <servlet-name>Actualizar</servlet-name>
        <servlet-class>Servlets.Actualizar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FormActualizar</servlet-name>
        <servlet-class>Servlets.FormActualizar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Actualizar</servlet-name>
        <url-pattern>/Actualizar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormActualizar</servlet-name>
        <url-pattern>/FormActualizar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
